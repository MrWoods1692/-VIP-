{
  "manifest_version": 3,
  "name": "视频解析助手",
  "version": "3.0",
  "description": "一键解析各大平台VIP视频",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "视频解析助手"
  },
  "permissions": [
    "tabs",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}